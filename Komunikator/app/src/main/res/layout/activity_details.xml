<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/details_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/app_icon"
        app:srcCompat="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/details_bold_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/details_bold_name"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/details_bold_name"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/details_ignore_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="@string/details_ignore"
            android:textAlignment="center" />

        <Button
            android:id="@+id/details_add_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="@string/details_add"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/details_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:text="@string/details_name_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_name_label"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/details_avatar"
        android:layout_toStartOf="@+id/details_avatar"
        android:text="@string/details_name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/details_surname_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_name_label"
        android:layout_alignStart="@+id/details_name_label"
        android:layout_below="@+id/details_name"
        android:layout_marginTop="12dp"
        android:text="@string/details_surname_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_name"
        android:layout_alignStart="@+id/details_name"
        android:layout_below="@+id/details_surname_label"
        android:layout_marginTop="12dp"
        android:text="@string/details_surname"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/details_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_surname_label"
        android:layout_alignStart="@+id/details_surname_label"
        android:layout_below="@+id/details_surname"
        android:layout_marginTop="12dp"
        android:text="@string/details_email_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_surname"
        android:layout_alignStart="@+id/details_surname"
        android:layout_below="@+id/details_email_label"
        android:layout_marginTop="12dp"
        android:text="@string/details_email"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/details_birth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_email_label"
        android:layout_alignStart="@+id/details_email_label"
        android:layout_below="@+id/details_email"
        android:layout_marginTop="12dp"
        android:text="@string/details_birth_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_email"
        android:layout_alignStart="@+id/details_email"
        android:layout_below="@+id/details_birth_label"
        android:layout_marginTop="12dp"
        android:text="@string/details_birth" />

</RelativeLayout>
